source 'https://rubygems.org'
ruby '2.0.0'

gem 'rails'
gem 'pry'
gem 'jquery-rails'
gem 'turbolinks'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
end

group :development do
  gem 'annotate'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end


group :production do
 gem 'pg', '0.15.1'
end
